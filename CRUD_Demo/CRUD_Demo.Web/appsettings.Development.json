{
  "ConnectSettings": {
    "ConnectionString": "Data Source=SEZ-DESK-280\\SQLEXPRESS;Initial Catalog=CRUD_Demo;User ID=worksoft_user;Password=WorkSoft@123"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\CRUD_Demo\\CRUD_Demo.log",
          "fileSizeLimitBytes": "10485760",
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": "10"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ],
    "Properties": {
      "Application": "CRUD_Demo Web"
    }
  },
  "AllowedHosts": "*"
}